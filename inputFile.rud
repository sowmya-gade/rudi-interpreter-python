/* Factorial Calculator */

program

decs [
	integer fact /* factorial result */
	integer x /* intermediate factorial value */
	integer n /* input factorial term */
]

begin

	print "Enter the factorial term:"
	input n

    x = n * 3 / ( 2 + 1 )
    print "x = "
    print x

	if ( n :eq: 0 ) then

	[
		fact = 1
		print "fact here = "
		print fact
	]
	else
	[
	    x = 1
		fact = 1

		while (n :gt: x)
		[
			x = x + 1
			fact = fact * x

		]
	]


	print n
	print "! = "
	print fact

end